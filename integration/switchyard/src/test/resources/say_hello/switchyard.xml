<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0"
             xmlns:swyd="urn:switchyard-config:switchyard:1.0"
             xmlns:trfm="urn:switchyard-config:transform:1.0"
             xmlns:bean="urn:switchyard-component-bean:config:1.0"
             xmlns:bpel="urn:switchyard-component-bpel:config:1.0"
             xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
             targetNamespace="urn:switchyard-quickstart:bpel-say-hello:0.1.0"
             name="sayhello">
     <sca:composite name="sayhello" targetNamespace="urn:bpel:test:1.0">
        <sca:service name="SayHelloService" promote="SayHelloService">
            <binding.soap xmlns="urn:switchyard-component-soap:config:1.0">
                <wsdl>say_hello/SayHelloArtifacts.wsdl</wsdl>
                <serverPort>18001</serverPort>
            </binding.soap>
         </sca:service>

         <sca:component name="SayHelloService">
             <bpel:implementation.bpel processDescriptor="say_hello/deploy.xml"
                     version="1" serviceName="{http://www.jboss.org/bpel/examples}SayHelloService"
                                 portName="SayHelloPort"/>
                                 
             <sca:service name="SayHelloService">
                 <sca:interface.wsdl interface="say_hello/SayHelloArtifacts.wsdl#wsdl.porttype(SayHello)"/>
             </sca:service>
         </sca:component>
     </sca:composite>
</switchyard>
